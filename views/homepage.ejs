<html>
    <head>
        <script type="text/javascript" src="https://js.stripe.com/v2/"></script>
        <script type="text/javascript">
            Stripe.setPublishableKey('pk_test_nxhlYGcy6k8HVNk3M7ulQhiD');
        </script>
        <script
            type="text/javascript"
            src="https://code.jquery.com/jquery-3.1.1.js"
            integrity="sha256-16cdPddA6VdVInumRGo6IbivbERE8p7CQR3HzTBuELA="
            crossorigin="anonymous">
        </script>
        <script type="text/javascript" src="js/charge.js"></script>
        <link
            rel="stylesheet"
            href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
            integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
            crossorigin="anonymous">
    </head>
    <body>
        <div class="col-xs-12 col-sm-8">
            <h2 style="text-align:center">Cutting Chai</h2>
        </div>

        <form id="payment-form" style="margin:100px" class="form-horizontal">
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <span class="payment-errors" style="color:red"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label" for="card-number">Card Number</label>
                <div class="col-sm-4">
                    <input type="text" size="20" data-stripe="number" class="form-control card-number">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="expiration">Expiration (MM/YY)</label>
                <div class="col-sm-4">
                    <input type="text" size="2" data-stripe="exp_month" class="card-expiry-month"
                        style="height:34px; padding:6px 12px; font-size:14px; color:#555; border:1px solid #ccc; border-radius:4px;">
                    <span style="height:34px; padding:6px 12px; font-size:14px; color:#555;"> / </span>
                    <input type="text" size="2" data-stripe="exp_year" class="card-expiry-year"
                        style="height:34px; padding:6px 12px; font-size:14px; color:#555; border:1px solid #ccc; border-radius:4px;">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="cvc">CVC</label>
                <div class="col-sm-4">
                    <input type="text" size="4" data-stripe="cvc" class="form-control card-cvc">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="button" class="btn btn-primary submit" value="Submit Payment" onclick="submitForm()">
                </div>
            </div>

        </form>

    </body>
</html>
