<div class="col-xs-12">
    <div class="col-xs-12" style="background-color:rgba(0,0,0,0.75); margin: 25px 0px;">
        <% _.each(items, function (item) { %>
            <div class="col-xs-12 col-sm-4">
                <div class="col-xs-12 menu-item">
                    <img src="/images/<%=item.image%>" class="menu-item-image"/>
                    <h2 class="menu-item-title col-xs-10 col-sm-7 col-lg-10">
                        <%=item.name%>
                    </h2>
                    <h2 class="col-xs-2 col-sm-5 col-lg-2 price">$<%=item.price%></h2>
                    <button class="btn btn-primary add-to-cart" onclick="addItemToCart('<%=item.id%>')">
                        Add To Cart
                    </button>
                </div>
            </div>
        <% }) %>
    </div>
</div>
